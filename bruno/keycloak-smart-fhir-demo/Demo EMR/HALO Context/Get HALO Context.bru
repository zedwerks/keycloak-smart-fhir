meta {
  name: Get HALO Context
  type: http
  seq: 8
}

get {
  url: {{keycloak_url_base}}/realms/{{realm}}/halo/sofa/$get-context?launchID={{launch_id}}&smart=true
  body: none
  auth: bearer
}

params:query {
  launchID: {{launch_id}}
  smart: true
}

auth:bearer {
  token: {{$oauth2.credentials.access_token}}
}

settings {
  encodeUrl: true
  timeout: 0
}
