<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.17.xsd">

    <changeSet id="2025-11-07-create-context-entry-table" author="bhead">
        <!-- Ensure the table doesn't already exist -->
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="context_entry"/>
            </not>
        </preConditions>

        <createTable tableName="context_entry">
            <column name="context_id" type="VARCHAR(255)">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="realm_id" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="user_session_id" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="payload_blob" type="CLOB">
                <constraints nullable="false"/>
            </column>

            <column name="created_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>

            <column name="updated_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>

            <column name="expires_at" type="TIMESTAMP"/>

            <column name="version" type="BIGINT">
                <constraints nullable="false"/>
                <defaultValueNumeric>0</defaultValueNumeric>
            </column>
        </createTable>

        <!-- Optional: Create indexes to speed up lookups -->
        <createIndex indexName="idx_context_entry_realm" tableName="context_entry">
            <column name="realm_id"/>
        </createIndex>

        <createIndex indexName="idx_context_entry_user_session" tableName="context_entry">
            <column name="user_session_id"/>
        </createIndex>

        <!-- Add a unique constraint to prevent duplicate context kinds per user session -->
        <addUniqueConstraint 
            constraintName="uk_context_entry_unique_session"
            tableName="context_entry"
            columnNames="realm_id, user_session_id, context_id"/>

        <!-- Rollback: drop the table -->
        <rollback>
            <dropTable tableName="context_entry"/>
        </rollback>
    </changeSet>

</databaseChangeLog>